#include <stdio.h>

int main()
{
    int i,j,n;
    printf("n=");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=n;j++)
        {
            printf("  ");
        }
        for(j=i;j>=1;j--)
        {
            printf("%d", j);
        }
        for(j=2;j<=i;j++)
        {
            printf("%d", j);
        }
        printf("\n");
    }
    return 0;
}
