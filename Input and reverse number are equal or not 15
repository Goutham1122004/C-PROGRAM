#include<stdio.h>
int main()
{
    int n,sum=0,t;
    printf("ENTER THE NUMBER=");
    scanf("%d",&n);
    t=n;
    while(n!=0)
    {
        sum=sum*10;
        sum=sum+n%10;
        n=n/10;    
    }
    if(t==sum)
      printf("INPUT NUMBER %d AND REVERSE %d ARE EQUAL",n,sum);
    else 
    printf("INPUT NUMBER %d AND REVERSE %d ARE NOT EQUAL",n,sum);
    return 0;
}
